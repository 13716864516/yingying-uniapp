
.yijian-wrap {
	width: 92%;
	height: 400rpx;
	margin: 0 auto;
}
.yijian-txt {
	width: 100%;
	height: 100%;
	background-color: #F2F6FC;
}

/* 相册 */
.img-wrap {
	margin-top: 45rpx;
	width: 150rpx;
	height: 150rpx;
	line-height: 150rpx;
	text-align: center;
	background-color: #F2F6FC;
	position: relative;
}
.yijian-img {
	width: 100%;
	height: 100%;
	background-color: red;
	position: absolute;
	left: -9999rpx;
	top: -9999rpx;
}
.gai {
	left: 0;
	top: 0;
}
.jiahao-txt {
	font-size: 60rpx;
	color: #969696;
}

/* 提交 */
.submit-wrap {
	height: 80rpx;
	line-height: 80rpx;
	width: 90%;
	color: #FFFFFF;
	font-size: 30rpx;
	text-align: center;
	border-radius: 37rpx;
	position: fixed;
	left: calc(4.8%);
	bottom: 50rpx;
	background: linear-gradient(to right, #7BD68E, #65CCB9);
}
.opatity {
	opacity: 0.5;
}



